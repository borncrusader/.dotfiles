[include]
    path = .gitconfig_unshared
[core]
    editor = vim
[color]
    branch = auto
    diff = auto
    interactive = auto
    status = auto
    ui = auto
[push]
    default = simple
[merge]
    tool = vimdiff
[diff]
    tool = vimdiff
[difftool]
    prompt = false
[alias]
    st = status
    ci = commit
    df = diff
    bl = blame
    l = log --date=local
    lg = log -p
    who = shortlog -s --
    tree = log --graph --decorate --pretty=oneline --abbrev-commit
    svn-diff = !git-svn-diff
    stash-unapply = !git stash show -p | git apply -R
    sclone=svn clone -s --prefix=origin/
    sha=show --abbrev-commit
    ablog = log --abbrev-commit
    br = branch
    co = checkout
    d = difftool
    drev = diff --no-prefix --full-index
    sh = show
    shrev = show --no-prefix --full-index
