#!/bin/bash

usage()
{
    echo "$0: [options]"
    echo "  -h:  print this help"
    echo "  -o:  get orphans"
    echo "  -ro: remove orphans"
    echo "  -c:  get cache free"
    echo "  -rc: remove cache"
    exit 1
}

if [ -z "$1" ]; then
    usage
fi

case "$1" in
    "-h")
        usage
        ;;
    "-o")
        pacman -Qtdq
        ;;
    "-ro")
        pacman -Rns $(pacman -Qtdq)
        ;;
    "-c")
        paccache -d -v
        ;;
    "-rc")
        paccache -r
        ;;
    *)
        usage
        ;;
esac
