## FUNCTIONS ##
# common
mkcd()
{
    if [[ ! -d $1 ]]; then
        mkdir -p $1
    fi

    cd $1
}

insgen()
{
    if [[ -z $1 ]]; then
        echo $0 [box]
        return
    fi

    rm -rf $WRK/ljtmp; mkdir -p $WRK/ljtmp; pip install --no-deps --target $WRK/ljtmp .; rsync -e ssh -vltrSzD $WRK/ljtmp/ root@$1:/usr/lib/python2.7/site-packages
}

xrpm()
{
    rpm2cpio $1 | cpio -idmv
}

